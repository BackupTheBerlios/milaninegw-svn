<!-- BEGIN BlogsBlock -->
<div class='newscontainer'>
<table width="98%" border="0" cellspacing="0" cellpadding="0">
<tr>
	<td width="432" valign="top" style="padding:10px">
		<b><a href="{post_url}" class="navtitle_main">{post_title}</a></b>
	</td>
</tr>
<tr> 
	<td> 
		<table width="100%" border="0" cellspacing="0" cellpadding="0">
			<tr> 
				<td colspan="2" class="navbg_main" ><img style="float:left;padding:0px 10px 0px 10px;" src="{author_pic}"/>
                                
                                <i>{blogged_by} <br/>
                                  <a href="{post_author_url}">'{post_author}'</a>
                                <br/>
                                {post_date}</i>
				</td>
			</tr>
			<tr>
				<td style="padding:10px 10px 10px 10px;" colspan="2">
							{post_content}
				</td>
			</tr>
			<tr>
				<td style="padding-top:5px;"> 
                                  <a href="{post_url}">{read_more}</a>
                                </td>
				<td align="right" style="padding-right:10px;padding-top:5px;">
                                  <a href="{author_blog_url}">{more_blogs}</a>
                                </td>
			</tr>
		</table>
	</td>
</tr>
</table>
</div>
<br/>
<!-- END BlogsBlock -->
